<h1>Login</h1>

<p>
  <% flash.each do |name, msg| %>
    <strong><%= content_tag :div, msg, class: name %></strong>
  <% end %>
</p>

<%= form_tag '/login' do %>
  <p>
    Email: <%= text_field_tag :email %>
  </p>
  <p>
    Password: <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Submit" %>
  </p>
<% end %>

<p>
	New User? <%= link_to 'Signup', signup_path %>
</p>

<p>
	<%= link_to 'Home', welcome_index_path %>
</p>